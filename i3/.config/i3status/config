general {
         interval = 60
}

order += "battery 0"
order += "tztime local"

battery 0 {
	last_full_capacity = true
	integer_battery_capacity = true
        format = "%status %percentage "
        format_down = ""
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}

tztime local {
	format = " %A %e.%B   %H:%M"
        hide_if_equals_localtime = false
}
